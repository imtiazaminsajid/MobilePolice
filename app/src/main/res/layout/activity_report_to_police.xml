<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFCDB"
    tools:context=".ReportToPolice">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#575247"
        android:weightSum="6"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/menuAlertMessage"
            android:layout_width="0dp"
            android:layout_height="35sp"
            android:layout_weight="1"
            android:src="@drawable/ic_home_black_24dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:onClick="homeButton"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50sp"
            android:layout_weight="4"
            android:src="@drawable/pocket"
            android:gravity="center_horizontal"
            android:clickable="true"
            />

        <!--<ImageView-->
            <!--android:id="@+id/postAlertButton"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="35dp"-->
            <!--android:layout_weight="1"-->
            <!--android:src="@drawable/imgicon"-->
            <!--android:layout_gravity="center"-->

            <!--/>-->


    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time: "
            android:textSize="22sp"
            android:fontFamily="serif"
            android:textColor="#000"
            android:layout_gravity="center"

            />

        <TextView
            android:id="@+id/timeAndDateET"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="#D3F591"
            android:layout_marginLeft="43dp"
            android:inputType="textEmailAddress"
            />




    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location: "
            android:textSize="22sp"
            android:fontFamily="serif"
            android:textColor="#000"
            android:layout_gravity="center"

            />

        <EditText
            android:id="@+id/locationNameET"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:hint="Location"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="#D3F591"
            android:layout_marginLeft="3dp"
            />




    </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone: "
                    android:textSize="22sp"
                    android:fontFamily="serif"
                    android:textColor="#000"
                    android:layout_gravity="center"

                    />

                <EditText
                    android:id="@+id/phoneNumberET"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:hint="Phone Number"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="#D3F591"
                    android:layout_marginLeft="25dp"
                    />




            </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Message: "
            android:textSize="22sp"
            android:fontFamily="serif"
            android:textColor="#000"
            android:layout_gravity="center"

            />

        <EditText
            android:id="@+id/complainET"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:hint="Complain"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="#D3F591"
            android:layout_marginLeft="10dp"
            />




    </LinearLayout>

